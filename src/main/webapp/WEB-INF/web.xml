<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Blog-->
    <servlet>
        <servlet-name>TopBlogServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.blog.TopBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TopBlogServlet</servlet-name>
        <url-pattern>/top</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeBlogServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.blog.HomeBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeBlogServlet</servlet-name>
        <url-pattern>/home/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BlogManagerServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.blog.BlogManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogManagerServlet</servlet-name>
        <url-pattern>/blog-manage/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditPageServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.blog.EditPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPageServlet</servlet-name>
        <url-pattern>/edit-page/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BlogUploaderServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.blog.BlogUploaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogUploaderServlet</servlet-name>
        <url-pattern>/upload-file/*</url-pattern>
    </servlet-mapping>

    <!--Admin-->

    <!--User-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.user.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/sign-up</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.user.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/user-update</url-pattern>
    </servlet-mapping>

    <!--General-->
    <servlet>
        <servlet-name>ApiServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.global.ApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApiServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.global.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern/>
    </servlet-mapping>
    <servlet>
        <servlet-name>MarkdownFileServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.blog.MDFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MarkdownFileServlet</servlet-name>
        <url-pattern>/upload-md/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MDEditorServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.blog.MDEditorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MDEditorServlet</servlet-name>
        <url-pattern>/edit-md/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewerServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.global.ViewerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewerServlet</servlet-name>
        <url-pattern>/blogs/*</url-pattern>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChiSiamoServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.global.ChiSiamoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChiSiamoServlet</servlet-name>
        <url-pattern>/chi-siamo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.chat.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/new-chat</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChatListServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.chat.ChatListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChatListServlet</servlet-name>
        <url-pattern>/chats</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.chat.ChatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminManagement</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.admin.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminManagement</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CercaUtentiAdmin</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.admin.CercaUtentiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CercaUtentiAdmin</servlet-name>
        <url-pattern>/cerca-admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CambiaRuoloAdmin</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.control.admin.CambiaRuoloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CambiaRuoloAdmin</servlet-name>
        <url-pattern>/cambia-ruolo</url-pattern>
    </servlet-mapping>


    <mime-mapping>
        <extension>md</extension>
        <mime-type>text/markdown;charset=UTF-8</mime-type>
    </mime-mapping>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <!--TomMASO-->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <url-pattern>/admin</url-pattern>
            <url-pattern>/cerca-admin</url-pattern>
            <url-pattern>/cambia-ruolo</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>founder</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-role>
        <role-name>founder</role-name>
    </security-role>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>TomMASO</realm-name>
    </login-config>


</web-app>
<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--Blog-->
    <servlet>
        <servlet-name>HomeBlogServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.blog.HomeBlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeBlogServlet</servlet-name>
        <url-pattern>/home/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BlogManagerServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.blog.BlogManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogManagerServlet</servlet-name>
        <url-pattern>/blog-manage/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditPageServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.blog.EditPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPageServlet</servlet-name>
        <url-pattern>/edit-page/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BlogUploaderServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.blog.BlogUploaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogUploaderServlet</servlet-name>
        <url-pattern>/upload-file/*</url-pattern>
    </servlet-mapping>


    <!--User-->
    <servlet>
        <servlet-name>ForgotServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.user.ForgotServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgotServlet</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.user.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.user.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/profile</url-pattern>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/sign-up</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.user.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/user-update</url-pattern>
    </servlet-mapping>

    <!--General-->
    <servlet>
        <servlet-name>ApiServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.ApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApiServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MarkdownFileServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.MarkdownFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MarkdownFileServlet</servlet-name>
        <url-pattern>/upload-md</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MDEditorServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.MDEditorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MDEditorServlet</servlet-name>
        <url-pattern>/edit-md</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ViewerServlet</servlet-name>
        <servlet-class>com.pavastudios.TomMaso.servlets.ViewerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewerServlet</servlet-name>
        <url-pattern>/blogs/*</url-pattern>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>





    <mime-mapping>
        <extension>md</extension>
        <mime-type>text/markdown;charset=UTF-8</mime-type>
    </mime-mapping>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
</web-app>